  "paths" : {
    "/api/search/best" : {
      "get" : {
        "tags" : [ "NovelController" ],
        "summary" : "",
        "description" : "베스트 소설 작품을 조회한다.",
        "operationId" : "getAllBestNovels",
        "responses" : {
          "200" : {
            "description" : "Successfully retrieved",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/NovelResponseDto"
              }
            }
          },
          "500" : {
            "description" : "Internal Server Error"
          }
        }
      }
    },
    "/api/search/novel" : {
      "get" : {
        "tags" : [ "NovelController" ],
        "summary" : "",
        "description" : "소설 작품을 조회한다.",
        "operationId" : "getNovelById",
        "parameters" : [ {
          "in" : "body",
          "name" : "소설 고유의 ID 값",
          "description" : "Novel Id",
          "required" : true,
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully retrieved",
            "schema" : {
              "$ref" : "#/definitions/NovelDetailResponseDto"
            }
          },
          "500" : {
            "description" : "Internal Server Error"
          }
        }
      }
    },
    "/api/search/novelItem" : {
      "get" : {
        "tags" : [ "NovelController" ],
        "summary" : "",
        "description" : "소설 작품(편당)을 조회한다.",
        "operationId" : "getNovelItemById",
        "parameters" : [ {
          "in" : "body",
          "name" : "소설 고유의 ID 값",
          "description" : "Novel Id",
          "required" : true,
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        }, {
          "in" : "body",
          "name" : "소설(편당) 고유의 ID 값",
          "description" : "Novel Item Id",
          "required" : true,
          "schema" : {
            "type" : "integer",
            "format" : "int64"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Successfully retrieved",
            "schema" : {
              "$ref" : "#/definitions/NovelDetailResponseDto"
            }
          },
          "500" : {
            "description" : "Internal Server Error"
          }
        }
      }
    },
    "/api/search/topic" : {
      "get" : {
        "tags" : [ "NovelController" ],
        "summary" : "",
        "description" : "신작 베스트 소설 작품을 조회한다.",
        "operationId" : "getNewBestNovel",
        "responses" : {
          "200" : {
            "description" : "Successfully retrieved",
            "schema" : {
              "$ref" : "#/definitions/NovelResponseDto"
            }
          },
          "500" : {
            "description" : "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions" : {
    "NovelDetailResponseDto" : {
      "type" : "object",
      "required" : [ "clickCount", "comment", "id", "title" ],
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64",
          "example" : "1"
        },
        "title" : {
          "type" : "string",
          "example" : "Numble Novels"
        },
        "comment" : {
          "type" : "string",
          "example" : "Numble에서 제작한 웹 소설"
        },
        "clickCount" : {
          "type" : "integer",
          "format" : "int32",
          "example" : "102"
        },
        "novelItemList" : {
          "type" : "array",
          "example" : "'['{'id': '1','allPages': '168', 'isFree': 'true', 'fileSize': '2048', 'filePath': 'src/main/resources/sample/novel1-1'}']",
          "items" : {
            "$ref" : "#/definitions/NovelItem"
          }
        }
      }
    },
    "NovelItem" : {
      "type" : "object",
      "required" : [ "allPages", "filePath", "fileSize", "id", "isFree" ],
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64",
          "example" : "1"
        },
        "allPages" : {
          "type" : "integer",
          "format" : "int32",
          "example" : "168"
        },
        "isFree" : {
          "type" : "boolean",
          "example" : "true",
          "default" : false
        },
        "fileSize" : {
          "type" : "integer",
          "format" : "int32",
          "example" : "2048"
        },
        "filePath" : {
          "type" : "string",
          "example" : "src/main/resources/sample/novel1-1"
        }
      }
    },
    "NovelResponseDto" : {
      "type" : "object",
      "required" : [ "comment", "id", "title" ],
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64",
          "example" : "1"
        },
        "title" : {
          "type" : "string",
          "example" : "Numble Novels"
        },
        "comment" : {
          "type" : "string",
          "example" : "Numble에서 제작한 웹 소설"
        }
      }
    }
  }
}